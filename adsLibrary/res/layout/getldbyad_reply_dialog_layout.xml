<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/getldbyad_dialog_bg"/>

        <TextView
            android:id="@+id/getld_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="#01b6f6"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/getld_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/getld_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/selector_btn_user_register"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="17sp"/>


    </RelativeLayout>


</RelativeLayout>
