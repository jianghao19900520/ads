<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/geting_anim_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dialog_waiting_icon" />

        <TextView
            android:id="@+id/geting_anim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/geting_anim_icon"
            android:text="@string/geting_info"
            android:textColor="#00b5f7"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>